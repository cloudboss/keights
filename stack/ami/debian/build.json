{
  "variables": {
    "keights-version": "",
    "debian-release": "bullseye",
    "root-vol": "xvdb",
    "usr-vol": "xvdc",
    "var-vol": "xvdd",
    "var-lib-containerd-vol": "xvde",
    "var-log-vol": "xvdf",
    "containerd-version": "1.4.9-1",
    "k8s-version": "",
    "share-accounts": "all",
    "base-ami-pattern": "debian-stretch-hvm-x86_64-gp2-*",
    "base-ami-owner": "379101102735",
    "ssh-interface": "public_ip",
    "vpc-id": "",
    "subnet-id": "",
    "dev-mode": "false",
    "ami-name-suffix": ""
  },

  "builders": [{
    "type": "amazon-ebssurrogate",

    "vpc_id": "{{ user `vpc-id` }}",
    "subnet_id": "{{ user `subnet-id` }}",
    "ssh_interface": "{{ user `ssh-interface` }}",

    "ssh_pty": true,
    "instance_type": "t2.micro",
    "associate_public_ip_address": true,
    "ssh_username": "admin",
    "ssh_timeout": "5m",
    "ami_groups": "{{ user `share-accounts` }}",
    "snapshot_groups": "{{ user `share-accounts` }}",

    "ena_support": true,
    "sriov_support": true,

    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "{{ user `base-ami-pattern` }}",
        "root-device-type": "ebs"
      },
      "owners": ["{{ user `base-ami-owner` }}"],
      "most_recent": true
    },

    "launch_block_device_mappings": [
      {
        "device_name": "/dev/{{ user `root-vol` }}",
        "delete_on_termination": true,
        "volume_size": 1,
        "volume_type": "gp2"
      },
      {
        "device_name": "/dev/{{ user `usr-vol` }}",
        "delete_on_termination": true,
        "volume_size": 2,
        "volume_type": "gp2"
      },
      {
        "device_name": "/dev/{{ user `var-vol` }}",
        "delete_on_termination": true,
        "volume_size": 1,
        "volume_type": "gp2"
      },
      {
        "device_name": "/dev/{{ user `var-lib-containerd-vol` }}",
        "delete_on_termination": true,
        "volume_size": 22,
        "volume_type": "gp2"
      },
      {
        "device_name": "/dev/{{ user `var-log-vol` }}",
        "delete_on_termination": true,
        "volume_size": 8,
        "volume_type": "gp2"
      }
    ],
    "ami_root_device": {
      "source_device_name": "/dev/{{ user `root-vol` }}",
      "device_name": "/dev/xvda",
      "delete_on_termination": true,
      "volume_size": 1,
      "volume_type": "gp2"
    },

    "tags": {
      "os:version": "debian-{{ user `debian-release` }}",
      "containerd:version": "{{ user `containerd-version` }}",
      "k8s:version": "{{ user `k8s-version` }}",
      "keights:version": "{{ user `keights-version` }}"
    },

    "run_tags": {
      "Name": "ami-builder-{{ user `debian-release` }}"
    },

    "run_volume_tags": {
      "Name": "ami-volume-{{ user `debian-release` }}"
    },

    "ami_name": "debian-{{ user `debian-release` }}-k8s-hvm-amd64-{{ user `keights-version` }}{{ user `ami-name-suffix` }}",
    "ami_description": "Cloudboss Keights Debian {{ user `debian-release` }}",
    "ami_virtualization_type": "hvm"
  }],

  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./playbook.yml",
      "user": "admin",
      "use_proxy": false,
      "keep_inventory_file": "{{ user `dev_mode` }}",
      "extra_arguments": [
        "-e", "root_vol={{ user `root-vol` }}",
        "-e", "usr_vol={{ user `usr-vol` }}",
        "-e", "var_vol={{ user `var-vol` }}",
        "-e", "var_lib_containerd_vol={{ user `var-lib-containerd-vol` }}",
        "-e", "var_log_vol={{ user `var-log-vol` }}",
        "-e", "containerd_version={{ user `containerd-version` }}",
        "-e", "k8s_version={{ user `k8s-version` }}",
        "-e", "keights_version={{ user `keights-version` }}",
        "-e", "debian_release={{ user `debian-release` }}",
        "-e", "dev_mode={{ user `dev-mode` }}"
      ]
    }
  ]
}
