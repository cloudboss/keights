root=true

[*]
charset=utf-8
indent_style=space
indent_size=2
end_of_line=lf
insert_final_newline=true
trim_trailing_whitespace=true
max_line_length=120

[*.c]
indent_size=4
max_line_length=80

[*.go]
indent_style=tab

[*.md]
trim_trailing_whitespace=false

[*.py]
indent_size=4
max_line_length=80

[Makefile*]
indent_style=tab
